{% extends 'base.html.twig' %}

{% block body %}
    <!-- Crea la vista para modificar una categoria.
    Usa la función buildForm($request, $categoria) del archivo
    CategoriaType.php para generar el formulario de modificación.
    Usa la función editAction($request, $categoria) y la variable $edit_form del
    archivo CategoriaController.php para guardar las modificaciones de la
    categoria. -->

    <div class="row">
        <div class="col-md-10">
            <h1>Editar una categoría</h1>
        </div>
        <div class="col-md-2">
            <a href="{{ path('categoria_index') }}" class="btn btn-primary pull-right">   
                <span class="glyphicon glyphicon-list"></span> Volver a la lista
            </a>
        </div>
    </div>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <button type="submit" class="btn btn-primary pull-right">
            <span class="glyphicon glyphicon-ok"></span> Guardar
        </button>
    {{ form_end(edit_form) }}

    {{ form_start(delete_form) }}
        <button type="submit" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> Borrar categoría
        </button>
    {{ form_end(delete_form) }}    
{% endblock %}
