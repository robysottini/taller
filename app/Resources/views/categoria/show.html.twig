{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-10">
            <h1>Categoría. <small>La nueva categoría fue creada con éxito.</small></h1>
        </div>
        <div class="col-md-2">
            <a href="{{ path('categoria_index') }}" class="btn btn-primary pull-right">
                <span class="glyphicon glyphicon-list"></span> Volver a la lista
            </a>
        </div>       
    </div>

    <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ categorium.nombre }}</td>
            </tr>
        </tbody>
    </table>
    
    <!-- Botón Editar -->
    <a href="{{ path('categoria_edit', { 'id': categorium.id }) }}" class="btn btn-primary pull-right">
        <span class="glyphicon glyphicon-pencil"></span> Editar
    </a>

    {{ form_start(delete_form) }}
        <button type="submit" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> Borrar
        </button>
    {{ form_end(delete_form) }}
{% endblock %}
