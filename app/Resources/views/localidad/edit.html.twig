{% extends 'base.html.twig' %}

{% block body %}
    <!-- Crea la vista para modificar una localidad.
    Usa la función buildForm($request, $localidad) del archivo
    LocalidadType.php para generar el formulario de modificación.
    Usa la función editAction($request, $localidad) y la variable $edit_form del
    archivo LocalidadController.php para guardar las modificaciones de la
    localidad. -->
    
    <h1>Editar una localidad
        <a href="{{ path('localidad_index') }}" class="btn btn-primary pull-right">   
            <span class="glyphicon glyphicon-list"></span> Volver a la lista
        </a>
    </h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}

        <button type="submit" class="btn btn-primary pull-right">
            <span class="glyphicon glyphicon-ok"></span> Guardar
        </button>
        
    {{ form_end(edit_form) }}

    {{ form_start(delete_form) }}
        <button type="submit" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> Borrar
        </button>
    {{ form_end(delete_form) }}
{% endblock %}
