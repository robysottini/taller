{% extends 'base.html.twig' %}

{% block body %}
    <h1>Localidades</h1>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Código postal</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
        {% for localidad in localidades %}
            <tr>
                <td>{{ localidad.nombre }}</td>
                <td>{{ localidad.codigopostal }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('localidad_edit', { 'id': localidad.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('localidad_new') }}">Crear nueva entrada</a>
        </li>
    </ul>
{% endblock %}
