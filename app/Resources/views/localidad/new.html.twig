{% extends 'base.html.twig' %}

{% block body %}
    <!-- Crea la vista para crear una nueva localidad.
    Usa la función buildForm($request, $localidad) del archivo LocalidadType.php
    para generar el formulario de alta.
    Usa la función newAction($request) y la variable $form del
    archivo LocalidadController.php para guardar la nueva localidad.
    -->

    <h1>Crear localidad
        <a href="{{ path('localidad_index') }}" class="btn btn-primary pull-right">
            <span class="glyphicon glyphicon-list"></span> Volver a la lista
        </a>
    </h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        
        <button type="submit" class="btn btn-primary pull-right">
            <span class="glyphicon glyphicon-ok"></span> Guardar
        </button>
        
    {{ form_end(form) }}
{% endblock %}
