{% extends 'base.html.twig' %}

{% block body %}
    <!-- Crea la vista para crear un nuevo punto de interés.
    Usa la función buildForm($request, $puntoInteres) del archivo
    PuntoInteresType.php para generar el formulario de alta.
    Usa la función newAction($request) y la variable $form del
    archivo PuntoInteresController.php para guardar el nuevo punto de interés.
    -->
    
    <div class="row">
        <div class="col-md-10">
            <h1>Crear punto de interés</h1>
        </div>
        <div class="col-md-2">
            <a href="{{ path('puntointeres_index') }}" class="btn btn-primary pull-right">
                <span class="glyphicon glyphicon-list"></span> Volver a la lista
            </a>
        </div>       
    </div>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        
        <button type="submit" class="btn btn-primary pull-right">
            <span class="glyphicon glyphicon-ok"></span> Guardar
        </button>

    {{ form_end(form) }}

    
{% endblock %}
