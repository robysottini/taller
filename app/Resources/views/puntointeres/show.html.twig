{% extends 'base.html.twig' %}

{% block body %}
    <!-- Crea la vista para mostrar el nuevo punto de interés creado.
    Usa la función newAction($request) y la variable $puntoInteres del
    archivo PuntoInteresController.php para mostrar el punto de interés creado.
    -->

    <div class="row">
        <div class="col-md-10">
            <h1>Punto de interés. <small>El nuevo punto de interés fue creado con éxito.</small></h1>
            <div class="col-md-2">
                <a href="{{ path('categoria_index') }}" class="btn btn-primary pull-right">   
                    <span class="glyphicon glyphicon-list"></span> Volver a la lista
                </a>
            </div>
        </div>        
    </div>

    <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ puntoInteres.nombre }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ puntoInteres.descripcion }}</td>
            </tr>
            <tr>
                <th>Latitud</th>
                <td>{{ puntoInteres.latitud }}</td>
            </tr>
            <tr>
                <th>Longitud</th>
                <td>{{ puntoInteres.longitud }}</td>
            </tr>
            <tr>
                <th>Link de interés</th>
                <td>{{ puntoInteres.linkinteres }}</td>
            </tr>
            <tr>
                <th>Dirección</th>
                <td>{{ puntoInteres.direccion }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('puntointeres_edit', { 'id': puntoInteres.id }) }}" class="btn btn-primary pull-right">
        <span class="glyphicon glyphicon-pencil"></span> Editar
    </a>
    
    {{ form_start(delete_form) }}
        <button type="submit" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> Borrar
        </button>
    {{ form_end(delete_form) }}
{% endblock %}
